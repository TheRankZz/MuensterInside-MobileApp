<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.mobile.MainActivity">

    <Button
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/button_essen"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#3d6a90" />

    <Button
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/button_hotel"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="#3d6a90" />

    <Button
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/button_sehenswuerdigkeiten"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#3d6a90" />

    <Button
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/button_party"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#3d6a90" />

    <Button
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/button_shopping"
        android:layout_alignTop="@+id/button_hotel"
        android:layout_alignEnd="@+id/button_party"
        android:background="#3d6a90" />

    <Button
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/button_veranstaltungen"
        android:layout_alignTop="@+id/button_sehenswuerdigkeiten"
        android:layout_alignEnd="@+id/button_shopping"
        android:background="#3d6a90" />

</RelativeLayout>
