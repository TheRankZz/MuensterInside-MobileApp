<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.muensterinside.mobile.WelcomeActivity"
    android:background="#7383fd">


    <TextView
        android:id="@+id/text_id"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/hallo"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:textSize="30dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_marginTop="33dp"
        android:textStyle="italic"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_id"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Los geht&apos;s!"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/text_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/willkommen"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:typeface ="serif"
        android:layout_below="@+id/text_id"
        android:layout_alignParentStart="true" />

</RelativeLayout>
